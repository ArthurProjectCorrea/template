{
  "name": "template",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md,json,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json,yml,yaml}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:e2e": "turbo run test:e2e",
    "test:cov": "turbo run test:cov",
    "clean": "turbo run clean",
    "prepare": "husky",
    "commit": "cz",
    "wiki:generate": "node scripts/generate-wiki.js",
    "wiki:update": "npm run wiki:generate",
    "quality:check": "pnpm lint && pnpm format:check && pnpm check-types && pnpm test && pnpm build",
    "init:project": "node scripts/initialize-project.js",
    "init:template": "bash scripts/initialize-project.sh",
    "init:template:win": "scripts/initialize-project.bat"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "commitizen": "^4.3.0",
    "cz-customizable": "^7.0.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.7",
    "prettier": "^3.6.2",
    "turbo": "^2.5.4",
    "typescript": "5.8.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
